using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Spiel
{
    class Hauptmenü
    {
        String input = "";
        //String output = "";
        public void Menü()
        {
            Console.WriteLine("--> Hauptmenmü\n");
            Console.WriteLine("1: Spielstart mit x");
            Console.WriteLine("2: Spielstart mit o");
            Console.WriteLine("3: Reset");
            Console.WriteLine("4: Ende");
            Console.Write("\n Warte auf eingabe: ");
            Input();
        }

        public void Input()
        {
            try
            {
                input = Console.ReadLine();
                Auswahl();
            }
            catch
            {
                Console.WriteLine("Catchblock");
                Menü();
            }
        }

        public void Auswahl() 
        {
            if (input == "1")       // Spieler 1 hat Buchstabe x, Spieler 2 das o
            {                       //String pMenüpunkt, String pSpielstart, String pWeristdran, String Buchstabe
                Erzeuge erzeugt1 = new Erzeuge("1", "x", "1", "x");
                erzeugt1.Menü();
            }
            else if (input == "2")  // Spieler 1 hat Buchstabe o, Spieler 2 das x
            {                       //String pMenüpunkt, String pSpielstart, String pWeristdran, String Buchstabe
                Erzeuge erzeugt2 = new Erzeuge("2", "o", "1", "o");
                erzeugt2.Menü();
            }
            else if (input == "3")
            {
                Console.Write("Reset Erfolgreich. Beliebige Taste drücken: ");
                Console.ReadKey();
                Console.Clear();
                Menü();
            }
            else if (input == "4")
                Environment.Exit(0);
            else
            {
                Console.Write("Falsche Eingabe!! Beliebige Taste drücken: ");
                Console.ReadKey();
                Console.Clear();
                Menü();
            }
        }
    }
}

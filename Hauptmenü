using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Spiel
{
    class Hauptmenü
    {
        String input = "";
        //String output = "";
        public void Menü()
        {
            Console.WriteLine("--> Hauptmenmü\n");
            Console.WriteLine("1: Spielstart mit x");
            Console.WriteLine("2: Spielstart mit o");
            Console.WriteLine("3: Reset");
            Console.WriteLine("4: Ende");
            Console.Write("\n Warte auf eingabe: ");
            Input();
        }

        public void Input()
        {
            try
            {
                input = Console.ReadLine();
                Auswahl();
            }
            catch
            {
                Console.WriteLine("Catchblock");
                Menü();
            }
        }

        public void Auswahl() 
        {
            if (input == "1")       // Spielstart mit x
            {                       //String pMenüpunkt, String pSpielstart, String pWeristdran
                Erzeugen1 erzeugen1 = new Erzeugen1("1", "x", "1");
                erzeugen1.ErzeugenMenü();
            }
            else if (input == "2")  // Spielstart mit o
            {                       //String pMenüpunkt, String pSpielstart, String pWeristdran
                Erzeugen1 erzeugen2 = new Erzeugen1("2", "o", "1");
                erzeugen2.ErzeugenMenü();
            }
            else if (input == "3")
            {
                Console.Write("Reset Erfolgreich. Beliebige Taste drücken: ");
                Console.ReadKey();
                Console.Clear();
                Menü();
            }
            else if (input == "4")
                Environment.Exit(0);
            else
            {
                Console.Write("Falsche Eingabe!! Beliebige Taste drücken: ");
                Console.ReadKey();
                Console.Clear();
                Menü();
            }
        }
    }
}

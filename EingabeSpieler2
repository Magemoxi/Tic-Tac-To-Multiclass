using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ErneuterVersuch
{
    class EingabeSpieler2 : Spielfeld
    {
        protected int input = 0;
        protected int geradedran = 0;
        protected String spielstart = "";
        protected String buchstabe = "";

        //################
        public void setInput(int eingabe)
        {
            input = eingabe;
        }

        public int getInput()
        {
            return input;
        }

        //#####################################
        public void Menü()
        {
            Console.WriteLine("EingabeSpieler2");

            Spielfeld spieler2 = new Spielfeld();
            spielstart = spieler2.getSpielstart();

            while (true)
            {
                /*
                7 8 9  <->  a1 a2 a3
                4 5 6  <->  b1 b2 b3
                1 2 3  <->  c1 c2 c3
                */

                if (spielstart.Equals("x"))
                {
                    if (geradedran == 1)
                        buchstabe = "x";
                    else if (geradedran == 2)
                        buchstabe = "o";
                    else Console.WriteLine("Fehler buchstabe x oder o");
                }

                if (spielstart.Equals("o"))
                {
                    if (geradedran == 1)
                        buchstabe = "o";
                    else if (geradedran == 2)
                        buchstabe = "x";
                    else Console.WriteLine("Fehler buchstabe o oder x");
                }

                //################

                bool nochmal = true;       // jeder mus setzen
                while (nochmal == true)
                {
                    input = int.Parse(Console.ReadLine());
                    switch (input)
                    {
                        case 1:
                            if (c1 == 0)
                            {
                                c1 = geradedran;
                                c11 = buchstabe;
                                nochmal = false;
                            }
                            else
                                Console.Write("Feld bereits gesetzt, wähle ein unbenutzes !");
                            break;
                        case 2:
                            if (c2 == 0)
                            {
                                c2 = geradedran;
                                c22 = buchstabe;
                                nochmal = false;
                            }
                            else
                                Console.Write("Feld bereits gesetzt, wähle ein unbenutzes !");
                            break;
                        case 3:
                            if (c3 == 0)
                            {
                                c3 = geradedran;
                                c33 = buchstabe;
                                nochmal = false;
                            }
                            else
                                Console.Write("Feld bereits gesetzt, wähle ein unbenutzes !");
                            break;
                        case 4:
                            if (b1 == 0)
                            {
                                b1 = geradedran;
                                b11 = buchstabe;
                                nochmal = false;
                            }
                            else
                                Console.Write("Feld bereits gesetzt, wähle ein unbenutzes !");
                            break;
                        case 5:
                            if (b2 == 0)
                            {
                                b2 = geradedran;
                                b22 = buchstabe;
                                nochmal = false;
                            }
                            else
                                Console.Write("Feld bereits gesetzt, wähle ein unbenutzes !");
                            break;
                        case 6:
                            if (b3 == 0)
                            {
                                b3 = geradedran;
                                b33 = buchstabe;
                                nochmal = false;
                            }
                            else
                                Console.Write("Feld bereits gesetzt, wähle ein unbenutzes !");
                            break;
                        case 7:
                            if (a1 == 0)
                            {
                                a1 = geradedran;
                                a11 = buchstabe;
                                nochmal = false;
                            }
                            else
                                Console.Write("Feld bereits gesetzt, wähle ein unbenutzes !");
                            break;
                        case 8:
                            if (a2 == 0)
                            {
                                a2 = geradedran;
                                a22 = buchstabe;
                                nochmal = false;
                            }
                            else
                                Console.Write("Feld bereits gesetzt, wähle ein unbenutzes !");
                            break;
                        case 9:
                            if (a3 == 0)
                            {
                                a3 = geradedran;
                                a33 = buchstabe;
                                nochmal = false;
                            }
                            else
                                Console.Write("Feld bereits gesetzt, wähle ein unbenutzes !");
                            break;
                        default:
                            Console.WriteLine("???");
                            Console.ReadLine();
                            break;

                    }// end switch
                }//end while switch
                nochmal = true; // damit die schleife wieder unendlich laufen kann

                Auswertung aus2 = new Auswertung();
                aus2.Menü();

            }//end while    
        }// end Spieler1
    }//end class eingabespielr1
}//end namespace

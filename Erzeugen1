using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Spiel
{
    class Erzeugen1
    {
        // Alle Klassen werden einmal neu erzeugt ugf Parameter übergeben
        Spielfeld   spielfeld = new Spielfeld();
        Spieler     spieler1  = new Spieler();
        Spieler     spieler2  = new Spieler();
        Tabelle     tabelle   = new Tabelle();
        Ergebnis    ergebnis  = new Ergebnis();

        private static String menüpunkt, spielstart, weristdran, input;

        public Erzeugen1(String pMenüpunkt, String pSpielstart, String pWeristdran)
        {
            menüpunkt  = pMenüpunkt;
            spielstart = pSpielstart;
            weristdran = pWeristdran;

            input = ""; // Eingabe vom Spieler
        }
        // set und getter start ################################################
        // set & get menüpunkt
        public void setMenüpunkt(String pMenüpunkt)
        {
            menüpunkt = pMenüpunkt;
        }
        public String getMenüpounkt() 
        {
            return menüpunkt;
        }

        // set & get spielstart
        public void setSpielstart(String pSpielstart)
        {
            spielstart = pSpielstart;
        }
        public String getSpielstart()
        {
            return spielstart;
        }

        // set & get weristdran
        public void setWeristdran(String pWeristdran)
        {
            weristdran = pWeristdran;
        }
        public String getpWeristdran()
        {
            return weristdran;
        }

        // set & get input
        public void setInput(String pInput)
        {
            input = pInput;
        }
        public String getpInput()
        {
            return input;
        }

        // set und getter ende ################################################
        public void ErzeugenMenü()
        {   //String pMenüpunkt, String pSpielstart, String pWeristdran
            spielfeld.Menü(menüpunkt, spielstart, weristdran);

            Console.WriteLine(spielfeld.getInput());
            Console.ReadKey();
        }


    }
}
